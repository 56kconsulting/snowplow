/**
 * SnowPlow event object definition
 *
 * This is being called "Event2" temporarily so that there is no conflict with the equivalent 
 * definition in `event.avsc`
 */

@namespace("com.snowplowanalytics.snowplow.storage.avro")
protocol Event {
	import idl "simple_types/Timestamp.avdl";
	import idl "snowplow_version/SnowPlowVersion.avdl";
	import idl "event_type/EventType.avdl";
	import idl "platform/Platform.avdl";

	record UserID {
		union { string, null } user;
	}

	record Event {
		string event_id;
		UserID user_id;
		Timestamp collector_tstamp;
		Timestamp device_tstamp;
		SnowPlowVersion snowplow_version;
		EventType event_type;
		Platform platform;
	}
}